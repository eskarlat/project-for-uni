extends layout.pug

block content

    div(class='container')
        h1 Create
        form(method='post', action='/admin/phone/create', class='form')
            div(class='form-group')
                input(type='text', name='title', placeholder='Enter title', class='form-control')
            div(class='form-group')
                input(type='text', name='image', placeholder='Enter image', class='form-control')
            div(class='form-group')
                input(type='text', name='description', placeholder='Enter description', class='form-control')
            div(class='form-group')
                input(type='number', name='price', placeholder='Enter price', class='form-control')
            div(class='form-group')
                button(type='submit', class='btn btn-primary') Create