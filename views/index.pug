extends layout.pug

block content

    div(class='container')
        h1 Books of University
        hr
        form(method="GET", action="/search", class="form-inline")
            div(class="form-group")
                input(class="form-control", placeholder="Search..." name="q")
            button(type="submit", class="btn btn-default") Search
        each book in books
            include book/item
