extends layout.pug

block content
    div(class='container')
        h1(class='text-center') Admin panel

        a(href='admin/book/create', class='btn btn-default mb10') Create new book

        each book in books
            div(class='media item-book')
                div(class='media-left')
                    img(class='media-object item-image' src='data:'+ book.image.contentType +';base64,'+book.image.data alt='')
                div(class='media-body')
                    h4(class='media-heading') #{book.title}
                    p #{book.description}
                    a(href='/admin/book/edit/' + book.id, class='btn btn-default') Edit
                    a(href='/admin/book/delete/' + book.id, class='btn btn-danger') Delete
